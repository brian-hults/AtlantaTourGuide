<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main Activity Styling -->
    <style name="mainActivityLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mainActivityTabLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="mainActivityViewPager" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- List View Styling -->
    <style name="listView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:divider">@color/colorPrimaryDark</item>
    </style>

    <!-- List Item and Text/Image View Styling -->
    <style name="listItemLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
    </style>

    <style name="listItemImg" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="textContainerLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignLeft">@id/list_item_img</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_toRightOf">@id/list_item_img</item>
        <item name="android:layout_above">@id/description_text_view</item>
    </style>

    <style name="nameTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="addressTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_below">@id/name_text_view</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="descriptionTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_below">@id/list_item_img</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>
